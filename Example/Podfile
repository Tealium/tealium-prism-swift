use_frameworks!

def tealium_libs
  pod 'tealium-swift/Core', :path => '../'
  pod 'tealium-swift/Lifecycle', :path => '../'
end

target 'Example_iOS' do
  platform :ios, '14.1'
  tealium_libs
  end

target 'CoreTests_iOS' do
  platform :ios, '14.1'
  tealium_libs
end

target 'CoreTests_macOS' do
  platform :osx, '10.14'
  pod 'tealium-swift/Core', :path => '../'
end

target 'CoreTests_tvOS' do
  platform :tvos, '14.1'
  pod 'tealium-swift/Core', :path => '../'
end

target 'LifecycleTests_iOS' do
  platform :ios, '14.1'
  tealium_libs
end

post_install do |installer|
    installer.pods_project.root_object.attributes["ORGANIZATIONNAME"] = "Tealium, Inc"
end
